<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9fcff"
    tools:context=".MyAccount">

    <TextView
        android:id="@+id/fatortakTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/chillax"
        android:textColor="#00516e"
        android:textSize="50sp" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/fatortakTV"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/box_edit_text"
        android:focusable="true"
        android:hint="enter new name"
        android:paddingLeft="10dp"
        android:textColorHighlight="#ff7eff15"
        android:textColorHint="#3F615D" />

    <EditText
        android:id="@+id/editTextUsername"
        android:enabled="false"
        android:inputType="none"
        android:focusableInTouchMode="false"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/editTextName"
        android:layout_alignEnd="@+id/editTextName"
        android:layout_alignRight="@+id/editTextName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/box_edit_text"
        android:paddingLeft="10dp"
        android:textColorHint="#3F615D" />

    <EditText
        android:id="@+id/editTextPhone"
        android:enabled="false"
        android:inputType="none"
        android:focusableInTouchMode="false"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/editTextUsername"
        android:layout_alignEnd="@+id/editTextUsername"
        android:layout_alignRight="@+id/editTextUsername"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/box_edit_text"
        android:paddingLeft="10dp"
        android:textColorHint="#3F615D" />

    <EditText
        android:id="@+id/editTextEmail"
        android:enabled="false"
        android:inputType="none"
        android:focusableInTouchMode="false"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/editTextPhone"
        android:layout_alignEnd="@+id/editTextPhone"
        android:layout_alignRight="@+id/editTextPhone"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/box_edit_text"
        android:paddingLeft="10dp"
        android:textColorHint="#3F615D" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/editTextEmail"
        android:layout_alignEnd="@+id/editTextEmail"
        android:layout_alignRight="@+id/editTextEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/box_edit_text"
        android:hint="enter new password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColorHint="#3F615D" />

    <Button
        android:id="@+id/updateButton"
        android:background="@drawable/roundedbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPassword"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp"
        android:text="Update"
        android:textColor="#00516e"
        android:textSize="20sp"
        android:fontFamily="@font/chillax"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/backButton"
        android:background="@drawable/roundedbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updateButton"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="Back"
        android:textColor="#00516e"
        android:textSize="20sp"
        android:fontFamily="@font/chillax"
        app:cornerRadius="20dp" />

</RelativeLayout>